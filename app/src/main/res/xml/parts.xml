<?xml version="1.0" encoding="utf-8"?>
<!--
    parts.xml: 交換パーツデータベース
    ゲーム内で購入・装着可能な各パーツの性能数値を定義します。
-->
<parts>
    <!-- タイヤ (Tires): グリップ倍率と外径 -->
    <tires>
        <item id="tire_std" name="ノーマルタイヤ" grip="1.0" diameter="0.65" price="0" />
        <item id="tire_sports" name="スポーツタイヤ" grip="1.2" diameter="0.65" price="25000" />
        <item id="tire_slick" name="競技用スリック" grip="1.6" diameter="0.65" price="80000" />
    </tires>

    <!-- エンジン (Engines): 出力、トルク、排気量、重量 -->
    <engines>
        <item id="eng_std" name="標準エンジン" power="150" torque="180" peakRpm="2000" displacement="2000" weight="200" price="0" />
        <item id="eng_sports" name="スポーツチューン" power="220" torque="250" peakRpm="2200" displacement="2200" weight="190" price="350000" />
        <item id="eng_race" name="レース用フルチューン" power="450" torque="500" peakRpm="2600" displacement="2600" weight="170" price="1200000" />
    </engines>

    <!-- マフラー (Mufflers): パワー増幅率と軽量化量 -->
    <mufflers>
        <item id="muf_std" name="ノーマルマフラー" powerMult="1.00" weightReduc="0" price="0" />
        <item id="muf_sports" name="スポーツマフラー" powerMult="1.05" weightReduc="5" price="45000" />
        <item id="muf_titan" name="フルチタンマフラー" powerMult="1.12" weightReduc="15" price="180000" />
    </mufflers>

    <!-- サスペンション (Suspensions): ハンドリング改善率 -->
    <suspensions>
        <item id="sus_std" name="ノーマルサス" improve="1.0" price="0" />
        <item id="sus_sports" name="強化サスペンション" improve="0.85" price="60000" />
        <item id="sus_race" name="車高調キット" improve="0.70" price="240000" />
    </suspensions>

    <!-- トランスミッション (Transmissions): 各速ギア比と最終減速比 -->
    <transmissions>
        <item id="trans_5mt" name="5速MT" ratios="0,3.2,1.9,1.3,1.0,0.8" final="4.1" price="0" />
        <item id="trans_6mt_close" name="6速クロスミッション" ratios="0,2.9,2.1,1.6,1.3,1.1,0.9" final="4.4" price="150000" />
    </transmissions>
</parts>
